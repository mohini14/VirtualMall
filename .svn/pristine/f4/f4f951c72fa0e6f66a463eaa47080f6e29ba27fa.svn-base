#import "UIButton+VirtualMall.h"

#define kSearchButtonRedColor 0.816
#define kSearchButtonGreenColor 0.294
#define kSearchButtonBlueColor 0.298
#define kSearchButtonAlpha 1.0

@implementation UIButton (VirtualMall)

//method handles search button look
+(void) setUpSearchButton :(UIButton *)searchButton
{
	searchButton.layer.cornerRadius = searchButton.bounds.size.height*0.5;
	searchButton.backgroundColor = [UIColor colorWithRed:kSearchButtonRedColor green:kSearchButtonGreenColor blue:kSearchButtonBlueColor alpha:kSearchButtonAlpha];
}

@end
