-(BOOL) validateEmail
{
	Validation *validation=[Validator validateEmail:self.email.text];
	if([validation.valid isEqualToString:kValidKeyNoValue])
	{
		NSString *str=[NSString append:kEmailLabelTitle withSring:validation.reason];
